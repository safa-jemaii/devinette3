<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:orientation="vertical"
    android:background="@color/GhostWhite">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Devinette"
        android:background="@color/AliceBlue"
        android:textAlignment="center"
        android:textColor="@color/rose"
        android:textSize="50sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/number_guessing_game_transparent"
        />
    <TextView
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp"
        android:text="Saisir Votre Nom et Prenom"
        android:textColor="@color/Gray"
        android:textStyle="bold"
        android:background="@color/AliceBlue"
        android:textSize="25sp"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:autofillHints=""
        android:hint="Taper ici ..."
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnEntrer"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="110dp"
        android:backgroundTint="@color/DeepSkyBlue"
        android:text="Entrer"
        android:layout_gravity="center"
        android:textColor="@color/White"
        android:textSize="20sp"
        />



</LinearLayout>