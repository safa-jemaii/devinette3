<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/GhostWhite">

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="kkk"-->
<!--        android:id="@+id/text1"/>-->
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/AliceBlue"
        android:text="Devinette"
        android:textAlignment="center"
        android:textColor="@color/rose"
        android:textSize="50sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/LightYellow"
        android:text="Deviner le nombre cacher ? "
        android:textAlignment="center"
        android:textColor="@color/teal"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/HighScore"
        android:layout_width="142dp"
        android:layout_height="48dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/images__4_"></ImageButton>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:background="@color/Beige"
        android:text="Score: 0"
        android:textColor="#009688"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@id/restart"
        android:layout_width="70sp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/Beige"
        android:contentDescription="@string/app_name"
        android:minHeight="48dp"
        android:src="@drawable/ic_baseline_restart_alt_24"
        android:visibility="invisible"
        tools:visibility="visible" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_timer" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="00:00"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
       />


    <Button
        android:id="@+id/start_pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:backgroundTint="@color/DeepSkyBlue"
        android:text="nouvelle partie"
        android:onClick="clear"
        tools:ignore="OnClick" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:autofillHints=""
        android:hint="Entrer le nombre"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:backgroundTint="@color/Lime"
        android:text="valider"
        android:textColor="@color/green"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/Azure"
        android:textAlignment="center"
        android:textColor="@color/Crimson"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historique : "
            android:textSize="15sp"
            android:textStyle="bold" />

    </ScrollView>

</LinearLayout>