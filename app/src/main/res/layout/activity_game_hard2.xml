<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/DarkSlateGray">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/LightSeaGreen"
        android:textAlignment="center"
        android:textColor="@color/Azure"
        android:text="Devinette"
        android:textSize="50sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/Azure"
        android:text="Deviner le nombre cacher ? "
        android:textAlignment="center"
        android:textColor="@color/teal"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_gravity="left"
        android:text="Score:"
        android:layout_marginTop="7dp"
        android:textSize="25sp"
        android:textColor="@color/LightGrey"
        android:textStyle="bold"
        android:layout_marginLeft="5dp"/>

    <ImageButton
        android:id="@id/restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/LightSkyBlue"
        android:src="@drawable/ic_baseline_restart"
        android:visibility="invisible"
        tools:visibility="visible"
        />


    <ImageView
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_baseline_timer" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="00:00"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        />


    <Button
        android:id="@+id/start_pause"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginRight="90dp"
        android:backgroundTint="@color/DeepSkyBlue"
        android:text="nouvelle partie"
        android:onClick="clear"
        tools:ignore="OnClick" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:autofillHints=""
        android:textColor="@color/white"
        android:hint="Entrer le nombre"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        android:backgroundTint="@color/LightGreen"
        android:text="valider"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/White"
        android:textSize="20sp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:background="@color/Azure"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/Crimson"
        android:layout_marginTop="20dp"
        android:textAlignment="center"/>


</LinearLayout>